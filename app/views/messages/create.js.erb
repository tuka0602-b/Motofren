<% if @message.errors.any? %>
  $("#message_form").html("<%= escape_javascript(render('shared/message_form')) %>")
<% else %>
  $("#message_content").val('');
  $(".error-list").css('display', 'none');
  $(".field_with_errors").removeClass("field_with_errors")
  $("#messages").html("<%= escape_javascript(render(partial: 'message', collection: @messages)) %>");
  $("#talk_users").html("<%= escape_javascript(render('talk_rooms/talk_users', users: @talk_room.users)) %>");
<% end %>