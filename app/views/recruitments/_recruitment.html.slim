.card.mb-4
  - unless recruitment.picture.blank?
    = image_tag(recruitment.picture.url, class: "card-img-top", style: "max-height: 480px;")
  - else
    img class="card-img-top" src="http://placehold.it/700x400" alt="Card image cap"
  .card-body
    .row
      .col-md-9
        h2.card-title.mb-1
          = recruitment.title
      .col-md-3
        span id="recruitment_like_form_#{recruitment.id}"
          - if current_user.recruitment_like?(recruitment)
            = render 'recruitments/recruitment_unlike', recruitment: recruitment
          - else
            = render 'recruitments/recruitment_like', recruitment: recruitment
        span id="recruitment-likes-count-#{recruitment.id}"
          = render 'recruitments/likes_count', recruitment: recruitment

    = gravatar_for(recruitment.user, size: 40)
    span.card-subtitle.mb-2
      = link_to recruitment.user.name, recruitment.user, class: "text-muted"
    p.card-text
      = recruitment.content
    = link_to "Read More →", recruitment, class: "btn btn-primary", remote: true
    .modal#recruitment-modal tabindex="-1" role="dialog" aria-hidden="true"
  .card-footer.text-muted
    |  Posted on January 1, 2017 by 
    a[href="#"]
      | Start Bootstrap
    - if current_user?(recruitment.user)
      span= link_to "編集", edit_recruitment_path(recruitment)
      span= link_to "削除", recruitment, data: { confirm: "削除しますか？" }, method: :delete