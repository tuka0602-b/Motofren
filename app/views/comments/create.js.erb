<% if @comment.errors.any? %>
  $("#comment_form").html("<%= escape_javascript(render('shared/comment_form')) %>")
<% else %>
  $("#comments").html("<%= escape_javascript(render('image_posts/comments', image_post: @image_post)) %>");
  $("#comment_content").val('');
  $(".error-list").css('display', 'none');
  $(".field_with_errors").removeClass("field_with_errors")
<% end %>