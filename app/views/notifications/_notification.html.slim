- visitor = notification.visitor
- visited = notification.visited
.col-md-8.mx-auto.mt-4.notification
  .row.align-items-center
    .col-md-1
      = gravatar_for(visitor, size: 40)
    .col-md-9
      .form-inline
        span
          = link_to user_path(visitor) do
            strong.text-muted.font-md= visitor.name
          | さんが
          = render partial: 'notifications/action', locals: { visitor: visitor, visited: visited, notification: notification}
    .col-md-2.d-flex.align-self-end
      .small.text-muted
        = "#{time_ago_in_words(notification.created_at).upcase} 前"
  hr
